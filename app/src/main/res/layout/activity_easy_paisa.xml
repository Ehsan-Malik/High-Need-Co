<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/my_drawer_layout"
    tools:context=".easyPaisa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Easypaisa Payment"
            android:textSize="34sp"
            android:textStyle="bold"
            android:padding="5dp"
            android:textColor="#01b85f"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            />


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/easypaisa"
            android:layout_marginTop="20dp"/>



        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Your Account Number"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="5dp"
            android:textColor="#01b85f"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            />


        <EditText
            android:id="@+id/accountNumber"
            android:layout_width="wrap_content"
            android:hint="Easypaisa Account Number"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:maxLength="11"
            android:layout_gravity="center"
            android:inputType="phone" />

        <Button
            android:id="@+id/paybtn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Pay Now"
            android:backgroundTint="#01b85f"
            />

    </LinearLayout>






</androidx.drawerlayout.widget.DrawerLayout>